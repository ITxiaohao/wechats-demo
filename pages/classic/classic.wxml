<!-- pages/classic/classic.wxml -->
<view class="container">
  <view class="header">
    <v-epsoide class="epsoide" index="{{classicData.index}}" />
    <v-like class="like" bind:like="onLike" like="{{likeStatus}}" count="{{likeCount}}" />
  </view>
  <v-movie img="{{classicData.image}}" content="{{classicData.content}}" />
  <v-navi bind:left="onNext" bind:right="onPrevious" class="navi" first="{{first}}" latest="{{latest}}" title="{{classicData.title}}" />
</view>
